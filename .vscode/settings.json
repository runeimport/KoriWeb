{
    // Configuraciones del terminal para mejorar el copiado y pegado
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.allowChords": true,
    "terminal.integrated.allowMnemonics": false,
    
    // Asegurar que Ctrl+V funcione para pegar en el terminal
    "terminal.integrated.commandsToSkipShell": [
        // Permitir que estos comandos funcionen normalmente en VS Code
        "workbench.action.terminal.copySelection",
        "workbench.action.terminal.paste",
        "workbench.action.terminal.copyAndClearSelection"
    ],
    
    // Configuraciones adicionales para mejorar la experiencia
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.2,
    
    // Asegurar que el terminal detecte el shell correcto
    "terminal.integrated.defaultProfile.linux": null,
    
    // Habilitar links en el terminal
    "terminal.integrated.allowedLinkSchemes": [
        "file",
        "http",
        "https",
        "mailto",
        "vscode",
        "vscode-insiders"
    ]
}
